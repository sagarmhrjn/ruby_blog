<h1 class="text-center"><%= "Category: " + @category.name %></h1>

<div class="text-center">
    <% if logged_in? and current_user.admin? %>
        <span class="badge">
            <%= link_to "Edit Category Name", edit_category_path(@category) %>
        </span>
    <% end %>
    <%= will_paginate(@category_articles, class: 'justify-content-center') %>
</div>
<%= render 'articles/articles', obj: @category_articles %>
<div class="text-center">
    <%= will_paginate(@category_articles, class: 'justify-content-center') %>
</div>