<h1 class="text-center">Log in</h1>

<%= form_for(:session, url: login_path) do |form| %>
    <div class="row mb-3">
        <label for="email" class="col-sm-2 col-form-label">
            <%= form.label :email %>
        </label>
        <div class="col-sm-10 col-md-6 col-xs-10">
            <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-2 col-form-label">
            <%= form.label :password %>
        </label>
        <div class="col-sm-10 col-md-6 col-xs-10">
            <%= form.password_field :password, class: "form-control", placeholder: "Enter your password"%>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 offset-md-2 mb-2">
            <%= form.submit "Login", class: "btn btn-primary", type: "submit" %>
        </div>
    </div>
        
<% end %>

<div class="row">
        <div class="col-md-6 offset-md-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>
</div>