<%= render 'shared/errors', obj: @article %>
<%= form_for @article do |form| %>
    <div class="row mb-3">
        <label for="title" class="col-sm-2 col-form-label">
            <%= form.label :title %>
        </label>
        <div class="col-sm-10 col-md-8 col-xs-10">
            <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
    </div>
    <div class="row mb-3">
        <label for="description" class="col-sm-2 col-form-label">
            <%= form.label :description %>
        </label>
        <div class="col-sm-10 col-md-8 col-xs-10">
            <%= form.text_area :description, class: "form-control", placeholder: "Description of article", rows: 3 %>
        </div>
    </div>
    <div class="row mb-3">
        <div class="form-check form-check-inline col-md-8 offset-md-2 mb-2">
            <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                <%= cb.check_box %>
                <%= cb.label class: "form-check-label" %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 offset-md-2 mb-2">
            <%= form.submit class: "btn btn-primary", type: "submit" %>
        </div>
    </div>
        
<% end %>

<div class="row">
        <div class="col-md-6 offset-md-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>
</div>